<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Deeper shade for shadow under light blue -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- Background with padding for elevation effect -->
    <item android:top="2dp" android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FAFAFA"/> <!-- Light blue background for answer -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

</layer-list>