<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light grey for shadow -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- Background with padding for elevation effect -->
    <item android:top="2dp" android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FAFAFA"/> <!-- Off-white background for question, distinct from the general white background -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>
