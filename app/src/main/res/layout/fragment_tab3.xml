<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/cream">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exam Marking Rules for The AI Algorithm"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:id="@+id/checkBoxRule1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rule 1" />

    <CheckBox
        android:id="@+id/checkBoxRule2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rule 2" />

    <CheckBox
        android:id="@+id/checkBoxRule3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rule 3" />

    <CheckBox
        android:id="@+id/checkBoxRule4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rule 4" />

    <CheckBox
        android:id="@+id/checkBoxRule5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rule 5" />

    <Button
        android:id="@+id/buttonSubmitRules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Rules"
        android:backgroundTint="@color/light_blue"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp" />

</LinearLayout>
